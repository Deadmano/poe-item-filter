# Section: 0000 | CONFIG

# Bigger quest items.
Show
    Class "Quest Items"
    SetFontSize 45

# Section: 0020 | CONFIG - CURRENCIES

# Minimise the size of rarely used currencies.
Show
    Class "Currency"
    BaseType "Scroll of Wisdom" "Portal Scroll"
    SetFontSize 24

# Section: 0100 | EXCEPTIONAL ITEMS

Show
    BaseType "Mirror of Kalandra"
    SetTextColor 170 158 130 # Exceptional Item
    SetBackgroundColor 70 0 123 230 # Exceptional Item
    SetBorderColor 170 158 130 # Exceptional Item
    SetFontSize 45
    PlayAlertSound 7 100

Show
    Class "Fishing Rod"
    SetTextColor 170 158 130 # Exceptional Item
    SetBackgroundColor 70 0 123 230 # Exceptional Item
    SetBorderColor 170 158 130 # Exceptional Item
    SetFontSize 45

Show
    LinkedSockets = 6
    SetTextColor 170 158 130 # Exceptional Item
    SetBackgroundColor 70 0 123 230 # Exceptional Item
    SetBorderColor 170 158 130 # Exceptional Item
    SetFontSize 45

# Section: 0200 | CURRENCIES - RARE

Show
    Class "Currency"
    BaseType "Divine Orb" "Eternal Orb" "Exalted Orb"
    SetTextColor 170 158 130 # Currency
    SetBackgroundColor 0 0 0 230 # Currency
    SetBorderColor 170 158 130 # Currency
    SetFontSize 44
    PlayAlertSound 4 100

# Section: 0210 | CURRENCIES - UNCOMMON

Show
    Class "Currency"
    BaseType "Blessed Orb" "Chaos Orb" "Chromatic Orb" "Gemcutter's Prism" "Glassblower's Bauble" "Jeweller's Orb" "Orb of Alchemy" "Orb of Fusing" "Orb of Scouring" "Regal Orb" "Vaal Orb"
    SetFontSize 40

# Section: 0220 | CURRENCIES - COMMON

Show
    Class "Currency"
    BaseType "Armourer's Scrap" "Blacksmith's Whetstone" "Orb of Alteration" "Orb of Augmentation" "Orb of Chance" "Orb of Regret" "Orb of Transmutation" "Portal Scroll" "Scroll of Wisdom"
    SetFontSize 32

# Section: 0300 | VENDOR RECIPES - RARE

# 1x: Divine Orb.
Show
    Rarity < Unique
    LinkedSockets = 6
    SetTextColor 0 0 0 # Vendor Recipe: Rare
    SetBackgroundColor 169 169 169 # Vendor Recipe: Rare
    SetBorderColor 105 105 105 # Vendor Recipe: Rare
    SetFontSize 44

# 1x: Cartographer's Chisel.
Show
    Quality = 20
    Rarity = Normal
    Class "Map"
    SetTextColor 0 0 0 # Vendor Recipe: Rare
    SetBackgroundColor 169 169 169 # Vendor Recipe: Rare
    SetBorderColor 105 105 105 # Vendor Recipe: Rare
    SetFontSize 44

# 1x: Gemcutter's Prism.
Show
    Quality = 20
    Rarity = Normal
    Class "Gem"
    SetTextColor 0 0 0 # Vendor Recipe: Rare
    SetBackgroundColor 169 169 169 # Vendor Recipe: Rare
    SetBorderColor 105 105 105 # Vendor Recipe: Rare
    SetFontSize 42

# 1x: Cartographer's Chisel (when sold with ANY map).
Show
    Quality = 20
    Rarity <= Rare
    Class "One Hand Mace"
    BaseType "Gavel" "Rock Breaker" "Stone Hammer"
    SetTextColor 0 0 0 # Vendor Recipe: Rare
    SetBackgroundColor 169 169 169 # Vendor Recipe: Rare
    SetBorderColor 105 105 105 # Vendor Recipe: Rare
    SetFontSize 42

# 7x: Jeweller's Orb.
Show
    Rarity < Unique
    Sockets = 6
    LinkedSockets < 5
    SetTextColor 0 0 0 # Vendor Recipe: Rare
    SetBackgroundColor 169 169 169 # Vendor Recipe: Rare
    SetBorderColor 105 105 105 # Vendor Recipe: Rare
    SetFontSize 40

# Section: 0310 | VENDOR RECIPES - UNCOMMON

# 1x: Glassblower's Bauble.
Show
    Quality = 20
    Rarity = Normal
    Class "Flask"
    SetTextColor 0 0 0 230 # Vendor Recipe: Uncommon
    SetBackgroundColor 169 169 169 230 # Vendor Recipe: Uncommon
    SetBorderColor 105 105 105 # Vendor Recipe: Uncommon
