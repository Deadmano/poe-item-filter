    SetBackgroundColor 169 169 169 180 # Vendor Recipe: Common
    SetBorderColor 105 105 105 # Vendor Recipe: Common
    SetFontSize 36

# % towards 1x: Armourer's Scrap/Blacksmith's Whetstone (40% total quality). Prioritising 4 slot items.
Show
    Quality >= 5
    Rarity <= Rare
    Class "Claw" "Dagger" "One Hand Axe" "One Hand Mace" "One Hand Sword" "Wand" "Boots" "Gloves" "Helmet"
    SetTextColor 0 0 0 180 # Vendor Recipe: Common
    SetBackgroundColor 169 169 169 180 # Vendor Recipe: Common
    SetBorderColor 105 105 105 # Vendor Recipe: Common
    SetFontSize 32

# % towards 1x: Armourer's Scrap (40% total quality). Prioritising 4 slot items.
Show
    Quality >= 5
    Rarity <= Rare
    BaseType "Spirit Shield" "Buckler" "Spiked Shield"
    SetTextColor 0 0 0 180 # Vendor Recipe: Common
    SetBackgroundColor 169 169 169 180 # Vendor Recipe: Common
    SetBorderColor 105 105 105 # Vendor Recipe: Common
